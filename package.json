{
	"name": "codewars-playground-ts",
	"version": "0.0.1",
	"description": "A Codewars playground for TypeScript",
	"main": "katas/draft/solution.ts",
	"scripts": {
		"start": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -w --watch-files '**/*.ts' --ignore '**/archive/**/*.ts' '**/*-test.ts'",
		"start-all": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -w --watch-files '**/*.ts' '**/*-test.ts'",
		"start-archive": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register -w --watch-files '**/archive/**/*.ts' '**/archive/**/*-test.ts'"
	},
	"author": "felipehw",
	"license": "ISC",
	"devDependencies": {
		"@tsconfig/node18-strictest-esm": "^1.0.1",
		"@types/chai": "^4.3.3",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"prettier": "2.7.1"
	},
	"dependencies": {
		"ts-node": "^10.9.1",
		"typescript": "^4.8.2"
	}
}
